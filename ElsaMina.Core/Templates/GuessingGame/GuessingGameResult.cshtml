@inherits ElsaMina.Core.Templates.LocalizableTemplatePage<ElsaMina.Core.Templates.GuessingGame.GuessingGameResultViewModel>

<div>
    <h4>@GetString("guessing_game_game_ended")</h4>
    <span style="text-decoration: underline">@GetString("guessing_game_final_scores"):</span>
    <br/>

    @{
        var i = 1;
    }
    @foreach (var score in Model.Scores)
    {
        <span>
            @(i++). @score.Key (@score.Value @GetString("guessing_game_point")@(score.Value == 1 ? string.Empty : "s"))
        </span>
        <br/>
    }
</div>