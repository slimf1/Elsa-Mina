@using ElsaMina.Core.Utils
@inherits ElsaMina.Core.Services.Templates.LocalizableTemplatePage<ElsaMina.Commands.Arcade.Points.PointsUpdateViewModel>
@{
    string FormatPoints(double points)
    {
        return points % 1 == 0 ? ((int)points).ToString() : points.ToString("0.##");
    }
}
<b>@FormatPoints(Model.PointsAdded) @GetString(Model.IsAddition ? "points_added_to" : "points_removed_from") @Model.Username</b><br>
@GetString("points_new_total") <b>@Model.Username</b> : @FormatPoints(Model.NewTotal)<br>
<br>@GetString("leaderboard_title") :<br>
<table>
    <tr>
        <th>@GetString("leaderboard_user")</th>
        <th>@GetString("leaderboard_points")</th>
    </tr>
    @foreach (var (user, points) in Model.Leaderboard)
    {
        <tr>
            <td>
                <span
                    class="username"
                    data-name="@user"
                    style="font-weight: bold; font-style: italic; color: @user.ToColorHexCodeWithCustoms();">
                    @user
                </span>
            </td>
            <td>@FormatPoints(points)</td>
        </tr>
    }
</table>
